@model PortfolioApp.Models.ContactModel

@{
    ViewData["Title"] = "Create";
}

<h1 class="mb-4 text-center">Kontakta Mig</h1>

<hr />

<div class="container mt-4">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Stäng"></button>
        </div>
    }

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="alert alert-info text-center">
                Vi svarar vanligtvis inom <strong>3 timmar</strong>. Tveka inte att höra av dig!
            </div>
            <div class="card shadow-lg">
                <div class="card-body">
                    <h4 class="card-title text-center mb-3">Fyll i dina uppgifter</h4>
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label fw-bold">Namn</label>
                            <input asp-for="Name" class="form-control" placeholder="Ange ditt namn" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label fw-bold">E-post</label>
                            <input asp-for="Email" type="email" class="form-control" placeholder="Ange din e-postadress" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Message" class="form-label fw-bold">Meddelande</label>
                            <textarea asp-for="Message" class="form-control" rows="4" placeholder="Skriv ditt meddelande"></textarea>
                            <span asp-validation-for="Message" class="text-danger"></span>
                        </div>


                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">Skapa</button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Tillbaka till startsidan-knappen -->
            <div class="mt-3 text-start mb-3">
                <a asp-action="Index" class="btn btn-outline-secondary">← Tillbaka till startsidan</a>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
