@model PortfolioApp.Models.ContactModel

<section class="d-flex justify-content-center align-items-center" style="height: 100vh;">
    <form asp-controller="Contact" asp-action="Create" method="post" class="w-50">
        <div class="container mt-4">
            <div class="form-group">
                <label asp-for="Name" class="control-label">Name</label>
                <input asp-for="Name" class="form-control" required />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <label asp-for="Email" class="control-label">Email</label>
                <input asp-for="Email" type="email" class="form-control" required />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <label asp-for="Message" class="control-label">Message</label>
                <textarea asp-for="Message" class="form-control" rows="4" required></textarea>
                <span asp-validation-for="Message" class="text-danger"></span>
            </div>

            <div class="form-group mt-4 text-center">
                <input type="submit" value="Send" class="btn btn-primary" />
            </div>
        </div>
    </form>
</section>
